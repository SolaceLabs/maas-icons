{
  "name": "@solacedev/maas-icons",
  "repository": {
    "type": "git",
    "url": "https://github.com/solacedev/maas-icons"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/solacedev"
  },
  "keywords": [
    "icons",
    "ux",
    "sc",
    "solace"
  ],
  "bugs": {
    "url": "https://github.com/solacedev/maas-ux-icons/issues"
  },
  "author": "Kevin Lidstone",
  "version": "0.2.31",
  "description": "Svg icons library",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "rm -rf dist && node createIconTypes.js && microbundle --compress --jsx React.createElement --format cjs,modern --define process.env.NODE_ENV=production && npm run build:svg && npm run build:copy",
    "build:dev": "node createIconTypes.js && microbundle watch --jsx React.createElement --no-compress --format cjs --define process.env.NODE_ENV=development",
    "prepare": "run-s build",
    "test": "run-s test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "build:copy": "cp -rv ./illustrations ./dist",
    "build:svg": "svg-sprite --symbol --shape-id-separator=_ --symbol-dest=./dist --symbol-example true --symbol-example-dest index.html ./icons/**/*.svg"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^3.2.3",
    "microbundle": "^0.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-scripts": "^5.0.0",
    "svg-sprite": "^1.5.3",
    "typescript": "^4.5.5"
  },
  "files": [
    "dist"
  ]
}
